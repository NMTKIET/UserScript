{
  "manifest_version": 3,
  "name": "My Advanced User Script Manager",
  "version": "1.0",
  "description": "A basic extension to manage and run custom user scripts with an integrated editor.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [ "lib/*" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}